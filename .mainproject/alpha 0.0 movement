from tkinter import *
from tkinter import messagebox as mb
root = Tk()
root.title("Поле игры")
x_per = 6
colors = ['grey','grey','black','black','grey','black','grey','black','black','black']



holst = Canvas(root, width=300, height=300, bg='white')
holst.focus_set()
holst.pack()

for index in range(10):
    holst.create_rectangle(index*30,0,   index*30+30,30,   fill=colors[index],outline='grey',width=2)
player = holst.create_oval((x_per-1)*30+5,5,(x_per-1)*30+5+20,25,fill='yellow',outline='black')


def up(event):
    holst.move(player, 0, -30)
def down(event):
    holst.move(player, 0, 30)
def right(event):
    holst.move(player, 30, 0)
def left(event):
    holst.move(player, -30, 0)

holst.bind('<Left>', left)
holst.bind('<Right>', right)
holst.bind('<Down>', down)
holst.bind('<Up>', up)
'''
def keypress(event): 
    global x_per
    if event.keycode == 102:
        x_per += 1
    elif event.keycode == 100:
        x_per -= 1
'''
root.mainloop()
